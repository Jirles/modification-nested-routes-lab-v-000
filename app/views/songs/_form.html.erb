<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <% if @song.artist.nil? %>
    <%= f.select :author_id, options_from_collection_for_select(Author.all, :id, :name)%>
  <% else %>
    <%= f.hidden_field :artist_id %>
  <% end  %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
